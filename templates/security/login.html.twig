{% extends 'base.html.twig' %}

{% block title %}
   {{ parent() }} - Iniciar Sesion
{% endblock %}

{% block stylesheets %}
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
{% endblock %}

{% block body %}




    <h1>MINISTERIO DE JUSTICIA Y TRANSPARENCIA INSTITUCIONAL</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesion</h1>
        <h3> Ingrese los credenciales de Usuario </h3>
        <label for="inputUsername">Usuario</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        <label for="inputPassword">Contrase√±a</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <br>
        <button class="btn btn-lg btn-primary" type="submit">Iniciar</button>
        <br>
        {% if app.user %}
            <div class="mb-3">
                <br>
                Usted esta ingresando como: {{ app.user.username }},
                <br>
                {#
                <button class="btn btn-lg btn-primary" type="submit" >Cerrar Sesion</button>
                #}
                <a href="{{ path('app_logout') }}" class="btn btn-lg btn-primary">Cerrar Sesion</a>
            </div>
        {% endif %}

    </form>
{% endblock %}
