{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesion{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <h1>MINISTERIO DE JUSTICIA Y TRANSPARENCIA INSTITUCIONAL</h1>
    <br>
    <h3> Ingrese los credenciales de Usuario </h3>
<form method="post">
    <br>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Usted esta ingresando como {{ app.user.username }},
            <br>
            {#
            <button class="btn btn-lg btn-primary" type="submit" >Cerrar Sesion</button>
            #}
            <a href="{{ path('app_logout') }}" class="btn btn-lg btn-primary">Cerrar Sesion</a>

        </div>
    {% endif %}


    <br>
    <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesion</h1>
    <label for="inputUsername">Usuario</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword">Contrase√±a</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <br>
    <button class="btn btn-lg btn-primary" type="submit">Iniciar</button>

</form>
{% endblock %}
